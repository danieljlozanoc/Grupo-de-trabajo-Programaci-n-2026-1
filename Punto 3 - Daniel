import random

def lanzar_dados():
    dado1 = random.randint(1, 6)
    dado2 = random.randint(1, 6)
    return dado1, dado2

def suma(intentos):
    contador = 0
    while True:
        d1, d2 = lanzar_dados()
        contador+=1
        if d1+d2 == intentos: 
            break
    print(f"Fueron necesarios {contador} lanzamientos para satisfacer la condici√≥n")
    return contador

intentos = suma(12)
print(f"Fueron necesarios {intentos} lanzamientos")

